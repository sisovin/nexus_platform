generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String
  bookmarks Bookmark[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model Language {
  id        String      @id @default(cuid())
  name      String      @unique
  summary   String?
  ranking   Int?
  trendData Json?
  resources String[]
  images    String[]
  testimonials Testimonial[]
  bookmarks Bookmark[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  @@map("languages")
}

model Testimonial {
  id         String   @id @default(cuid())
  name       String
  email      String
  message    String
  status     String   @default("PENDING")
  language   Language? @relation(fields: [languageId], references: [id])
  languageId String?
  createdAt  DateTime @default(now())
  @@map("testimonials")
}

model Bookmark {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  language   Language @relation(fields: [languageId], references: [id])
  languageId String
  createdAt  DateTime @default(now())
  @@map("bookmarks")
}

model FeatureItem {
  id          String  @id @default(cuid())
  title       String
  description String?
  icon        String?
  @@map("features")
}

model AnalyticsEvent {
  id         String  @id @default(cuid())
  eventType  String
  userId     String?
  languageId String?
  metadata   Json?
  timestamp  DateTime @default(now())
  @@map("analytics")
}
