generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  role      String
  bookmarks Bookmark[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model Language {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String      @unique
  summary   String?
  ranking   Int?
  trendData Json?
  resources String[]
  images    String[]
  testimonials Testimonial[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  @@map("languages")
}

model Testimonial {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  authorName String
  content    String
  status     String   @default("PENDING")
  language   Language? @relation(fields: [languageId], references: [id])
  languageId String?  @db.ObjectId
  createdAt  DateTime @default(now())
  @@map("testimonials")
}

model Bookmark {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @db.ObjectId
  language   Language @relation(fields: [languageId], references: [id])
  languageId String   @db.ObjectId
  createdAt  DateTime @default(now())
  @@map("bookmarks")
}

model FeatureItem {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  icon        String?
  @@map("features")
}

model AnalyticsEvent {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  eventType  String
  userId     String? @db.ObjectId
  languageId String? @db.ObjectId
  metadata   Json?
  timestamp  DateTime @default(now())
  @@map("analytics")
}
