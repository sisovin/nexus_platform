{
    "name": "nexus-platform-backend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "lint": "eslint src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:migration": "jest --testPathPattern=migration",
        "test:integrity": "jest --testPathPattern=integrity",
        "db:verify": "tsx scripts/verify-db.ts",
        "prisma:generate": "prisma generate",
        "prisma:push": "prisma db push",
        "prisma:studio": "prisma studio",
        "prisma:seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^6.17.1",
        "@sentry/node": "^10.19.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "@types/supertest": "^2.0.16",
        "chai": "^4.3.10",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "mongodb": "^6.20.0",
        "pg": "^8.16.3",
        "prisma": "^6.17.1",
        "supertest": "^6.3.3",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    },
    "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa",
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.js",
            "**/?(*.)+(spec|test).js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js"
        ]
    }
}