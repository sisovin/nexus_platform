        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "@types/supertest": "^2.0.16",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3",
        "eslint": "^8.56.0",
